@{
    ViewData["Title"] = "Settings";
}

<div class="container mt-4 theme-contrast-text-0">
    <h1 class="mb-3">Display Settings</h1>

    <p>
        Use the theme button below to switch between the standard Sam's Warehouse blue theme
        and a darker theme that can be easier to use at night or in low-light environments.
        Your choice will be remembered on this device.
    </p>

    <div class="mt-3 mb-4">
        <input id="btnThemeSettings" type="button" class="btn btn-warning me-2" value="Toggle Theme" />
        <span class="small">This has the same effect as the theme button in the navigation bar.</span>
    </div>

    <p class="small">
        Note: Theme preferences are stored in your browser only. If you clear your browser data, the theme will reset.
    </p>
</div>

@section Scripts{
    <script>
        // Re-use the same theme switching logic as site.js by triggering the existing button if present.
        document.addEventListener("DOMContentLoaded", function () {
            const settingsBtn = document.getElementById("btnThemeSettings");
            const mainBtn = document.getElementById("btnTheme");

            if (settingsBtn && mainBtn) {
                settingsBtn.addEventListener("click", function () {
                    mainBtn.click();
                });
            }
        });
    </script>
}
